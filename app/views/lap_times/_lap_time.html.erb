<div id="<%= dom_id lap_time %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Driver:</strong>
    <%= lap_time.driver_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Circuit:</strong>
    <%= lap_time.circuit_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Lap number:</strong>
    <%= lap_time.lap_number %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Time:</strong>
    <%= lap_time.time %>
  </div>
</div>
