<%= form_with(model: lap_time, class: "contents") do |form| %>
  <% if lap_time.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(lap_time.errors.count, "error") %> prohibited this lap_time from being saved:</h2>

      <ul class="list-disc ml-6">
        <% lap_time.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :driver_id %>
    <%= form.text_field :driver_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lap_time.errors[:driver_id].none?, "border-red-400 focus:outline-red-600": lap_time.errors[:driver_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :circuit_id %>
    <%= form.text_field :circuit_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lap_time.errors[:circuit_id].none?, "border-red-400 focus:outline-red-600": lap_time.errors[:circuit_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :lap_number %>
    <%= form.number_field :lap_number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lap_time.errors[:lap_number].none?, "border-red-400 focus:outline-red-600": lap_time.errors[:lap_number].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :time %>
    <%= form.text_field :time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": lap_time.errors[:time].none?, "border-red-400 focus:outline-red-600": lap_time.errors[:time].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
